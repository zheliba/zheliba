<Window x:Class="StringsUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StringsUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="AddMoney" Content="Add money" HorizontalAlignment="Left" Margin="475,303,0,0" VerticalAlignment="Top" Width="136" Height="44" Click="Button_Click"/>
        <ListBox Name="UsersList" Margin="0,59,553,0" SelectionChanged="ListBox_SelectionChanged" SelectionMode="Single">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBox x:Name="userInfo" HorizontalAlignment="Left" Margin="381,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="324" Height="99"/>
        <TextBox x:Name="AmountToAdd" HorizontalAlignment="Left" Margin="483,265,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
